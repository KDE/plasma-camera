            "config-opts": [
                "-Ddisable_gtkdoc=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "branch": "1.16.0",
                    "url": "git://anongit.freedesktop.org/gstreamer/gst-plugins-bad",
                    "commit": "5fde70bb63a1cbf6f734fb2429e74ffb53126217"
